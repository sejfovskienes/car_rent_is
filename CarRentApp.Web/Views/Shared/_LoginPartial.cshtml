@using CarRentApp.Domain.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color: #45dfb1;">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link" style="color: #45dfb1;">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link " asp-area="Identity" asp-page="/Account/Register" style="color: #45dfb1;">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link " asp-area="Identity" asp-page="/Account/Login" style="color: #45dfb1;">Login</a>
    </li>
}
</ul>
